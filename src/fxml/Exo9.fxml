<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>

<!-- Créer une ProgressBar avec FXML qui augmente progressivement lorsqu'on clique sur un bouton "Charger". Une autre option : Simuler un téléchargement avec Timeline. -->

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Ex9.Exo9Controller" spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
    <ProgressBar fx:id="progressBar" prefWidth="200" progress="0.0"/>
    <Button text="Charger" onAction="#handleLoad"/>
    <Button text="Annuler" onAction="#handleCancel"/>
</VBox>