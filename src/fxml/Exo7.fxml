<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Ex7.Exo7Controller" spacing="10" style="-fx-padding: 10px; -fx-alignment: center;">
    <ListView fx:id="listView" onMouseClicked="#handleListViewClick"/>
    <ImageView fx:id="imageView" fitWidth="400" fitHeight="400" preserveRatio="true"/>
    <Pane fx:id="pane" prefWidth="400" prefHeight="400" style="-fx-border-color: black;"
          onDragOver="#handleDragOver" onDragDropped="#handleDragDropped"/>
    <Label fx:id="label" text="Selected image: "/>
    <Button text="Add Image" onAction="#addImage"/>
    <Button text="Remove Image" onAction="#removeImage"/>
</VBox>